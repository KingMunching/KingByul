@onready var inv:Inv = preload(\"res://inventory/player_inventory.tres\")
@onready var slots: Array = $NinePatchRect/GridContainer.get_childred()

var is_open = false

func _ready():
	close()

func _process(delta):
	if Input.is_action_just_pressed(\"open_inventory\"):
		if is_open:
			close()
		else:
			open()
			
func open():
	visible = true
	is_open = true
	
func close():
	visible = false
	is_open = false
